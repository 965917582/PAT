#include<iostream>
using namespace std;

int main() {
	long n;
	cin >> n;
	cout << n << "=";
  //输入1特别判断
	if (n == 1) {
		printf("1");
		return 0;
	}
  //找出所有质因子并计数
	for (int i = 2; i <= n; i++) {
		int cnt = 0;
		while (n%i == 0) {
			n /= i;
			cnt++;
		}
		
		if (i+1 > n) {
			if (cnt>0)
				if(cnt==1)
					printf("%ld", i);
				else printf("%ld^%d", i, cnt);
		}
		else {
			if (cnt>0)
				if (cnt == 1)
					printf("%ld*", i);
				else printf("%ld^%d*", i, cnt);
		}
	}
	return 0;
}
